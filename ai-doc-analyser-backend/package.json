  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "dev:debug": "node --inspect --watch index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "echo 'No linting configured'",
    "clean": "rm -rf node_modules/.cache",
