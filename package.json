{
  "name": "ai-doc-analyser",
  "version": "2.0.0",
  "description": "AI-powered document analysis application with support for PDF, Word, Excel, and Images with OCR capabilities. Features a React frontend and Node.js backend powered by LangChain with Groq AI.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "install:all": "npm install && cd ai-doc-analyser-backend && npm install && cd ../ai-doc-analyser-frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd ai-doc-analyser-backend && npm run dev",
    "dev:frontend": "cd ai-doc-analyser-frontend && npm run dev",
    "build": "cd ai-doc-analyser-frontend && npm run build",
    "start": "cd ai-doc-analyser-backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd ai-doc-analyser-backend && npm test",
    "test:frontend": "cd ai-doc-analyser-frontend && npm test",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd ai-doc-analyser-backend && npm run test:coverage",
    "test:coverage:frontend": "cd ai-doc-analyser-frontend && npm run test:coverage",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd ai-doc-analyser-backend && npm run lint",
    "lint:frontend": "cd ai-doc-analyser-frontend && npm run lint",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd ai-doc-analyser-backend && npm run clean",
    "clean:frontend": "cd ai-doc-analyser-frontend && npm run clean",
    "deps:update": "npm run deps:update:backend && npm run deps:update:frontend",
    "deps:update:backend": "cd ai-doc-analyser-backend && npm run deps:update",
    "deps:update:frontend": "cd ai-doc-analyser-frontend && npm run deps:update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sujithsa007/sujithsa007-ai-doc-analyser.git"
  },
  "keywords": [
    "ai",
    "document-analysis",
    "pdf",
    "word",
    "excel",
    "ocr",
    "react",
    "nodejs",
    "express",
    "langchain",
    "groq",
    "chat",
    "machine-learning",
    "full-stack"
  ],
  "author": "Sujith S A <sujithsa007@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sujithsa007/sujithsa007-ai-doc-analyser/issues"
  },
  "homepage": "https://github.com/sujithsa007/sujithsa007-ai-doc-analyser#readme",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.6"
  }
}